nextflow_process {

    name "Test Process STAR_ALIGN_LOCAL"
    script "../main.nf"
    process "STAR_ALIGN_LOCAL"

    tag "modules"
    tag "modules_local"
    tag "star_align"

    test("star_align_local - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'S09' ], // meta map
                    file(params.panoramaseq_testdata_base_path + 'star_align/S09.cutadapt.adv.trim2.R2.fastq.gz', checkIfExists: true),
                    file('mock_star_index')  // Mock directory for stub test
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.bam },
                { assert process.out.log_final },
                { assert process.out.log_out },
                { assert process.out.versions },
                { assert snapshot(process.out).match("stub") }
            )
        }
    }
}
