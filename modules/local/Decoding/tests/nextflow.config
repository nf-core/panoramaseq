// Simple test config for HPC environment (login nodes have no GPU access)
process {
    publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }
    
    withLabel:gpu_process {
        // In HPC env, actual GPU jobs run via scheduler, tests run in stub mode
        accelerator = 2
    }
    
    withName: 'Decode_batch' {
        // GPU allocation for production (not used in stub tests)
        accelerator = 2
    }
}
